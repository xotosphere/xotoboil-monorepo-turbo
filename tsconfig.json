{
  "compilerOptions": {
    "baseUrl": "./",
    "importHelpers": true,
    "importsNotUsedAsValues": "error",
    "declaration": true,
    "sourceMap": true,   
    "allowJs": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["vite/client", "jest"],
    "paths": {"@xotoboil-monorepo-turbo/ui": ["packages/ui/src/main.ts"]},
    "experimentalDecorators": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "/config/*.ts",
    "/**/src/**/*.ts",
    "/**/src/**/*.js",
    "/**/src/**/*.vue",
    "/cypress/**/*.js",
    "./node_modules/jest", 
  ]
}